<% include ./partials/navHeader %>
         <% if (isOwner && !isActive && !hasDrafted) { %>
            <% if (numTeams < 4) { %>
                <div class="league-text text-center">
                    <h3>Your league must have at least 4 teams to begin playing!</h3>
                    <p class="lead">
                        Your league currently has <%= numTeams %> teams. 
                        Click the button below to invite a friend!
                    </p>
                    <a role="button" class="btn btn-outline-secondary" href="/league/invite">Invite to League</a>
                </div>
            <% } else if (numTeams < 10) { %>
                <div class="league-text text-center">
                    <h3>
                        You have enough teams to start playing!
                    </h3>
                    <p class="lead">
                        Your league currently has <%= numTeams %> teams.
                        Feel free to continue inviting more friends, we currently support leagues with 4 to 8 teams.
                        Click the 'Start League' button below when you are ready to play!
                    </p>
                    <a role="button" class="btn btn-outline-secondary" href="/league/invite">Invite to League</a>
                    <a role="button" class="btn btn-outline-secondary" href="/league/start">Start League</a>
                </div>
            <% } else if (numTeams === 10) { %>
                <div class="league-text text-center">
                    <h3>Your league has reached maximum capacity!</h3>
                    <p class="lead">Click the button below when you are ready to play!</p>
                    <a role="button" class="btn btn-outline-secondary" href="/league/start">Start League</a>
                </div>
            <% } %>
        <% } else if (isOwner && isActive && !hasDrafted) { %>
        <div class="league-text text-center">
            <h3>Congratulations on starting your league, now it's time to draft your teams!</h3>
            <hr class="my-4">
            <p class="lead">
                We do not currently support online drafting, so you will have to come
                back here when you are ready to manually submit your draft results. Below you will find draft resources
                such as a list of available players and a form to submit your results!
            </p>
            <a role="button" class="btn btn-outline-primary" href="/players">Available Players</a>
            <a role="button" class="btn btn-outline-primary" href="/league/enter-results">Enter Results</a>
        </div>
        <% } else if (isOwner && isActive && hasDrafted) { %>
            <div class="league-buttons text-center">
                <a class="league-button btn btn-outline-primary" href="/league/team" role="button">My Team</a>
                <a class="league-button btn btn-outline-primary" href="/league/matchup" role="button">Matchup</a>
                <a class="league-button btn btn-outline-primary" href="/league/standings" role="button">Standings</a>
                <a class="league-button btn btn-outline-primary" href="/league/schedule" role="button">Schedule</a>
            </div>
            <hr class="my-4">
        <% } else if (!isOwner && !isActive && !hasDrafted) { %>
            <div class="league-text text-center">
                <h3>Your league must have at least 4 teams to begin!</h3>
                <hr class="my-4">
                <p class="lead">
                    Once your league's commissioner invites enough people, players will be able to draft their teams. Come back
                    to this page when your league is ready.
                </p>
            </div>
        <% } else if (!isOwner && isActive && !hasDrafted) { %>
            <div class="league-text text-center">
                <h3>Congratulations on joining your league, now it's time to draft your teams!</h3>
                <hr class="my-4">
                <p class="lead">
                    We do not currently support online drafting, so once you complete your offline draft,
                    your league commissioner will manually submit your draft results. Below you will find a 
                    button leading to a list of available players!
                </p>
                <a role="button" class="btn btn-outline-primary" href="/players">Available Players</a>
            </div>
        <% } else if (!isOwner && isActive && hasDrafted) { %>
            <div class="league-buttons text-center">
                <a class="league-button btn btn-outline-primary" href="/league/team" role="button">My Team</a>
                <a class="league-button btn btn-outline-primary" href="/league/matchup" role="button">Matchup</a>
                <a class="league-button btn btn-outline-primary" href="/league/standings" role="button">Standings</a>
                <a class="league-button btn btn-outline-primary" href="/league/schedule" role="button">Schedule</a>
            </div>
        <% } %>
</div>

<% include ./partials/footer %>
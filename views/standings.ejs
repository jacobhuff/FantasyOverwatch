<% include ./partials/navHeader %>

    <div class="league-buttons text-center">
        <a class="league-button btn btn-outline-primary" href="/league/team" role="button">My Team</a>
        <a class="league-button btn btn-outline-primary" href="/league/matchup" role="button">Matchup</a>
        <a class="league-button btn btn-outline-primary" href="/league/standings" role="button">Standings</a>
        <a class="league-button btn btn-outline-primary" href="/league/schedule" role="button">Schedule</a>
    </div>

    <hr class="my-4">

    <h4>Standings</h4>
    <table class="table table-active standings-table">
    
    <thead>
        <tr>
        <th scope="col" class="standings-header">Rank</th>
        <th scope="col" class="standings-header">Team</th>
        <th scope="col" class="standings-header">Record</th>
        <th scope="col" class="standings-header">Points For</th>
        <th scope="col" class="standings-header">Points Against</th>
        </tr>
    </thead>
    <% for (let i = 0; i < teamStats.length; i++) { %>
        <tbody>
            <tr class="table-light standings-body">
            <td class="total-text"><%= teamStats[i].rank %></td>
            <td class="standings-text"><%= teamStats[i].name %></td>
            <td class="standings-text"><%= teamStats[i].record %></td>
            <td class="standings-text"><%= teamStats[i].pointsFor %></td>
            <td class="standings-text"><%= teamStats[i].pointsAgainst %></td>
        </tbody>
    <% } %>
    </table>
    
</div>
<% include ./partials/footer %>